# This makefile builds the school executable
# # compiler
CC = gcc

# Add compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# define rule to delete all files
RM = rm -f

# Build the executable
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

#compile the source files to object files
# %.o: %.c
# 	$(CC) $(CFLAGS) -c $< -o $@

# Rule to delete temporary files and the executable
clean:
	$(RM) *~ $(NAME)

# RULE TO DELETE ALL OBJECT FILES
oclean:
	$(RM) $(OBJ)

# Delete the executable, temporary files, and the object files
fclean: clean oclean

# Force the recompilation of all source files
re: fclean all

# Ensure the rules never fail
.PHONY: clean oclean fclean re
